<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Família"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/editNomeFamilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Família"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editNomeResponsavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Responsável"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editCpfResponsavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF do Responsável"
            android:inputType="number"
            android:maxLength="11"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editQuantidadePessoas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantidade de Pessoas"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editRendaMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Renda Média (R$)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bairro"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editRua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rua"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cidade"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <CheckBox
            android:id="@+id/checkSemLarFixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não possui lar fixo"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSalvarFamilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:text="Salvar"/>

    </LinearLayout>
</ScrollView>
