<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do chefe da família" />

        <EditText android:id="@+id/edtDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Documento"
            android:inputType="text" />

        <EditText android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Endereço"
            android:inputType="textPostalAddress" />

        <EditText android:id="@+id/edtContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contato"
            android:inputType="phone" />

        <EditText android:id="@+id/edtDependentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dependentes" />

        <EditText android:id="@+id/edtObservacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observações"
            android:minLines="3"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginTop="16dp"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
